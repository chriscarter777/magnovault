<article class="component" id="order" hidden>
     <header>
          <img src="~/Content/Logo_5in.png" /><br />
          <h1 class="page-title">Order MagnoVault</h1>
     </header>

     <div class="special-offer">
          <h4>
               Exclusive
               <span class="hastooltip" title="Price good for orders received by 8/31/18 - Maximum of 3 per household at introductory price.  Submit contact request for orders over 3.">
                    &nbsp;Introductory Offer&nbsp;
               </span>
               for
               <span class="hastooltip" title="Valid for destination ZIP codes 97005, 97006, etc...">
                    &nbsp;Portland/Vancouver Metro Area&nbsp;
               </span>
               Shipping Destinations
          </h4>
          <p>Pre-orders available for all other zip codes - submit contact request for pre-ordering instructions</p>
     </div>

     <div class="privacy-statement">
          <span class="privacy-header">Privacy Statement:</span>
          <span class="privacy-content">We will not sell your personal information with any entity other than for shipping and payment info as required on orders.</span>
     </div>

     @using (Ajax.BeginForm("SubmitOrder", new AjaxOptions { OnSuccess = "submitOrderSuccess(data)", OnFailure = "submitOrderFailure(data)" }))
     {
          <div class="row">
               <div class="col-md-5">
                    @for (int i = 0; i < Model.ProductCount; i++)
                    {
                         <div class="row">
                              <div class="col-xs-6">
                                   <img src="~/Content/chest2.png" height="150" alt="product" align="right" />
                              </div>

                              <div class="col-xs-6">
                                   <br />
                                   @Html.HiddenFor(m => m.Order.OnDate)
                                   @Html.HiddenFor(m => m.Order.CustomerId)
                                   @Html.HiddenFor(m => m.Order.Campaign)
                                   @Html.HiddenFor(m => m.Order.Deferred)
                                   @Html.HiddenFor(m => m.Order.Refunded)
                                   @Html.HiddenFor(m => m.Order.Done)
                                   @Html.HiddenFor(m => m.Order.Items[i].ProductId)
                                   @Html.HiddenFor(m => m.Order.Items[i].ProductName)
                                   @Html.HiddenFor(m => m.Order.Items[i].ProductShortDescr)
                                   <div style="font-weight:bold;">@Model.Products[i].Name: @Model.Products[i].ShortDescr</div>
                                   <div>(includes one remote control)</div>
                                   <div>
                                        @Html.HiddenFor(m => m.Order.Items[i].UnitPrice)
                                        <b>@Html.DisplayFor(m => m.Order.Items[i].UnitPrice)</b>
                                   </div>
                                   <div>
                                        <label>Quantity</label>@Html.TextBoxFor(m => m.Order.Items[i].Quantity, new { @class = "item-quantity", @type = "number" })
                                   </div>
                              </div>
                         </div>
                    }
               </div>

               <div class="col-md-4" style="padding-left:100px; padding-top:20px;">
                    <label>Subtotal</label>
                    @Html.HiddenFor(m => m.Order.Subtotal)
                    <span class="order-subtotal">@Html.DisplayFor(m => m.Order.Subtotal)</span>
                    <br />
                    <br />
                    <button class="btn btn-sm btn-info" id="checkout-order" data-toggle="modal" data-target="#checkout-modal">Checkout</button>

                    @*<label>Payment Method</label>
                         Credit/Debit<input type="radio" name="orderMethod" value="cc" />
                         PayPal<input type="radio" name="orderMethod" value="pp" />>*@
               </div>

               <div class="col-md-3 order-message">
                    @if (Request.IsAuthenticated && Model.Order.Deferred == true)
                    {
                         <p>Your saved order was retrieved.</p>
                    }
                    else if (Request.IsAuthenticated)
                    {
                         <p>No saved orders.</p>
                    }
                    else
                    {
                         <p>If you have an order saved, logging in will retrieve it.</p>
                    }
               </div>

          </div>
          @Html.Partial("_Checkout", Model)
          @Html.Partial("_OrderResponse", Model)
     }

     <div class="adspace"></div>
</article>

